    <div class="main">

        <div class="container">
            <form method="POST" id="signup-form" class="signup-form" action="HostLanding/AddPlace">
                <div>
                    <h3>General Info</h3>
                    <fieldset>
                        <h2>Apartment Information</h2>
                        <p class="desc">Please enter your infomation and proceed to add new place</p>
                        <div class="fieldset-content">
                            <div class="form-row">
                                <label class="form-label">Rental Type</label>
                                <div class="form-flex">

                                    <div class="form-check" style="margin:10px 10px">
                                        <input style="height:20px" class="form-check-input" type="radio" name="Room" id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Single Room
                                        </label>
                                    </div>

                                    <div class="form-check" style="margin:10px 10px">
                                        <input style="height:20px" class="form-check-input" type="radio" name="Room" id="flexRadioDefault2" checked>
                                        <label class="form-check-label mx-2" for="flexRadioDefault2">
                                            Apartment
                                        </label>
                                    </div>


                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="form-label">Number Of Rooms</label>
                                <input type="number" name="NumRooms" id="rooms" />

                            </div>
                            <div class="form-group">
                                <label for="phone" class="form-label">Number Of Kitchens</label>
                                <input type="number" name="NumKitchens" id="kitchens" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Number Of Washrooms</label>
                                <input type="number" name="NumWash" id="washrooms" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Number Of Balconys</label>
                                <input type="number" name="NumBalconys" id="balconys" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Additional Features</label>
                                <input type="text" name="AdditionalFeatures" id="additional-features" />
                            </div>



                        </div>
                    </fieldset>

                    <h3>Location</h3>
                    <fieldset>
                        <h2>Apartment Address</h2>
                        <p class="desc">Please enter your infomation and proceed to add new place</p>
                        <div class="fieldset-content">

                            <div class="form-group">
                                <label for="email" class="form-label">Country</label>
                                <input type="text" name="CountryName" id="country" />
                            </div>
                            <div class="form-group">
                                <label for="phone" class="form-label">Street Address</label>
                                <input type="text" name="StreetName" id="street" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">City</label>
                                <input type="text" name="CityName" id="city" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">State</label>
                                <input type="text" name="StateName" id="state" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Postal Code</label>
                                <input type="number" name="PostCode" id="post-code" />
                            </div>

                           


                        </div>
                    </fieldset>




                    <h3>Rules and Pricing</h3>
                    <fieldset>
                        <h2>Apartment Rules and Pricing</h2>
                        <p class="desc">Please enter your infomation and proceed to add new place</p>
                        <div class="fieldset-content">

                            <div class="form-group">
                                <label for="email" class="form-label">Host Rules</label>
                                <input type="text" name="HostRules" id="rules-host" />
                            </div>
                            <div class="form-group">
                                <label for="phone" class="form-label">Stay Minimum</label>
                                <input type="number" name="MinStay" id="stay-min" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Stay Maximum</label>
                                <input type="number" name="MaxStay" id="stay-max" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Price</label>
                                <input type="number" name="Price" id="host-price" />
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Offer</label>
                                <input type="text" name="Offer" id="host-offer" />
                            </div>

                        </div>
                    </fieldset>



                    <h3>Image and Caption</h3>
                    <fieldset>
                        <h2>Set Rental Image and Caption</h2>
                        <p class="desc">Add image and caption for your property</p>
                        <div class="fieldset-content">

                            <div class="form-group">
                                <label for="email" class="form-label">Caption</label>
                                <input type="email" name="RoomCaption" id="roomcaption" />
                            </div>

