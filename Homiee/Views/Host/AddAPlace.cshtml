                <div class="row">
                    @using (Html.BeginForm("AddAPlace", "Host", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <div class="card card-body">

                                <form class="form-horizontal mt-4">
                                    <h4 class="card-title">General Info</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add general informations about your place" readonly></h5>

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Room, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <label>Rental Type</label>
                                    @*@Html.EditorFor(model => model.Room, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })*@
                                    <select class="form-select shadow-none col-12" name="Room" id="room">
                                        <option selected>Choose...</option>
                                        <option value="Single Room">Single Room</option>
                                        <option value="Apartment">Apartment</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumRooms, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<label><span class="help">Number of Rooms</span></label>*@
                                    @Html.EditorFor(model => model.NumRooms, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NumRooms, "", new { @class = "text-danger" })
                                    @*<input type="number" class="form-control" value="" name="NumRooms" id="rooms">*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumKitchens, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<label><span class="help">Number of Kitchens</span></label>*@
                                    @Html.EditorFor(model => model.NumKitchens, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NumKitchens, "", new { @class = "text-danger" })
                                    @*<input type="number" class="form-control" value="" name="NumKitchens" id="kitchens">*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumWash, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<label><span class="help">Number of Washrooms</span></label>*@
                                    @Html.EditorFor(model => model.NumWash, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NumWash, "", new { @class = "text-danger" })
                                    @*<input type="number" class="form-control" value="" name="NumWash" id="washrooms">*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumBalconys, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<label><span class="help">Number of Balconys</span></label>*@
                                    @Html.EditorFor(model => model.NumBalconys, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NumBalconys, "", new { @class = "text-danger" })
                                    @*<input type="number" class="form-control" value="" name="NumBalconys" id="balconys">*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AdditionalFeatures, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<label><span class="help">Additional Features</span></label>*@
                                    @Html.EditorFor(model => model.AdditionalFeatures, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AdditionalFeatures, "", new { @class = "text-danger" })
                                    @*<input type="text" class="form-control" value="" name="AdditionalFeatures" id="additionalfeatures">*@
                                </div>

                                    @*Adress*@
                                    <h4 class="card-title">Address Info</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add address informations of your place" readonly></h5>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CountryName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Country</span></label>*@
                                        @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="CountryName" id="countryname">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.StreetName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Street Address</span></label>*@
                                        @Html.EditorFor(model => model.StreetName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.StreetName, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="StreetName" id="streetname">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CityName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">City</span></label>*@
                                        @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="CityName" id="cityname">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.StateName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">State</span></label>*@
                                        @Html.EditorFor(model => model.StateName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.StateName, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="StateName" id="statename">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PostCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Postal Code</span></label>*@
                                        @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="PostCode" id="postcode">*@
                                    </div>

                                    @*Rules & pricing*@
                                    <h4 class="card-title">Rental Rules and Pricing</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add your rental rules & pricing" readonly></h5>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HostRules, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Host Rules</span></label>*@
                                        @Html.EditorFor(model => model.HostRules, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HostRules, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="HostRules" id="hostrules">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MinStay, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Stay Minimum</span></label>*@
                                        @Html.EditorFor(model => model.MinStay, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MinStay, "", new { @class = "text-danger" })
                                        @*<input type="number" class="form-control" value="1" name="MinStay" id="minstay">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaxStay, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Stay Maximum</span></label>*@
                                        @Html.EditorFor(model => model.MaxStay, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaxStay, "", new { @class = "text-danger" })
                                        @*<input type="number" class="form-control" value="30" name="MaxStay" id="maxstay">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Cost Per Day (BDT)</span></label>*@
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                        @*<input type="number" class="form-control" value="" name="Price" id="price">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Offer, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Offer</span></label>*@
                                        @Html.EditorFor(model => model.Offer, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Offer, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="Offer" id="offer">*@
                                    </div>


                                    <h4 class="card-title">Posts & Caption</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add some images of your property and write a caption" readonly></h5>
                                    <div class="form-group">
                                        <label>Upload property images</label>
                                        <input type="file" class="form-control" multiple name="AddFile" id="addfile">
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RoomCaption, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label>Add Caption</label>*@
                                        @Html.EditorFor(model => model.RoomCaption, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RoomCaption, "", new { @class = "text-danger" })

                                        @*<input type="text" class="form-control" placeholder="Write something about your property here..." name="RoomCaption" id="roomcaption">*@
                                        <span class="help-block">
                                            <small>
                                                Thanks for joinig with us. Click on Submit button to proceed.
                                            </small>
                                        </span>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Submit" class="btn btn-default" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        }
                    </div>
