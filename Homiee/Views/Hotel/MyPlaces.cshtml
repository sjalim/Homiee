                        </li>

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-5 align-self-center">
                        <h4 class="page-title">My Places</h4>
                    </div>
                    <div class="col-7 align-self-center">
                        <div class="d-flex align-items-center justify-content-end">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="#">Home</a>
                                    </li>
                                    <li class="breadcrumb-item active" aria-current="page">My Places</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">List of My Places</h4>
                                <h6 class="card-subtitle">
                                    My Place section contains the places you added here. You can edit or delete any places as your will. You can also see the detailed view of any added place
                                </h6>
                                <h6 class="card-title mt-5">
                                    Table View of your places
                                </h6>
                                @foreach (var item in Model)
                                {
                                    <div class="table-responsive mt-3">
                                        <table class="table table-bordered table-responsive-lg">
                                            <thead>
                                                <tr>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.HotelName)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.HotelTradeLicence)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.HotelRoomType)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.NumBed)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.NumWash)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.AdditionalFeatures)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.CountryName)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.StreetName)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.CityName)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.StateName)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.PostCode)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.HotelRules)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.Cost)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.Offer)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.AddFile)</th>
                                                    <th scope="col">@Html.DisplayNameFor(model => model.HotelRoomCaption)</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HotelName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HotelTradeLicence)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HotelRoomType)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NumBed)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NumWash)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AdditionalFeatures)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CountryName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StreetName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CityName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StateName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PostCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HotelRules)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Cost)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Offer)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AddFile)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HotelRoomCaption)
                                                    </td>
             
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                    <div class="edrd">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.HotelInfoID }, new { @class = "btn btn-success text-white" }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.HotelInfoID }, new { @class = "btn btn-primary text-white" }) |
                                        @Html.ActionLink("Reviews", "Reviews", new { id = item.HotelInfoID }, new { @class = "btn btn-dark text-white" }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.HotelInfoID }, new { @class = "btn btn-danger text-white" })
                                    </div>
                                }
                                
                            </div>
                          
                        </div>
                    </div>
    
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
