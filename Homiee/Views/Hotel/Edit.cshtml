                                        @Html.EditorFor(model => model.StateName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.StateName, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="StateName" id="statename">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PostCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Postal Code</span></label>*@
                                        @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="PostCode" id="postcode">*@
                                    </div>

                                    @*Rules & pricing*@
                                    <h4 class="card-title">Rental Rules and Pricing</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add your rental rules & pricing" readonly></h5>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HotelRules, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Hotel Rules</span></label>*@
                                        @Html.EditorFor(model => model.HotelRules, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HotelRules, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="HotelRules" id="Hotelrules">*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Cost Per Day (BDT)</span></label>*@
                                        @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                                        @*<input type="number" class="form-control" value="" name="Cost" id="cost">*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Offer, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label><span class="help">Offer</span></label>*@
                                        @Html.EditorFor(model => model.Offer, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Offer, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" value="" name="Offer" id="offer">*@
                                    </div>


                                    <h4 class="card-title">Posts & Caption</h4>
                                    <h5 class="card-subtitle"><input class="form-control" type="text" placeholder="Add some images of your property and write a caption" readonly></h5>
                                    <div class="form-group">
                                        <label>Upload property images</label>
                                        <input type="file" class="form-control" multiple name="AddFile" id="addfile">
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HotelRoomCaption, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @*<label>Add Caption</label>*@
                                        @Html.EditorFor(model => model.HotelRoomCaption, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HotelRoomCaption, "", new { @class = "text-danger" })

                                        @*<input type="text" class="form-control" placeholder="Write something about your property here..." name="HotelRoomCaption" id="hotelroomcaption">*@
                                        <span class="help-block">
                                            <small>
                                                Thanks for joinig with us. Click on Submit button to proceed.
                                            </small>
                                        </span>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Submit" class="btn btn-default" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-success text-white" />
                                            @Html.ActionLink("Back to My Places", "MyPlaces", "/", new { @class = "btn btn-primary text-white" })
                                        </div>
                                    </div>

                                    @* <div>
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>*@

                                    @section Scripts {
                                    @Scripts.Render("~/bundles/jqueryval")
                                    }

                                </div>
                                }

                                @*<div>
                                    @Html.ActionLink("Back to List", "Index")
                                </div>

                                @section Scripts {
                                    @Scripts.Render("~/bundles/jqueryval")
                                }*@


                            </div>
                        </div>
                    </div>
                </div>

